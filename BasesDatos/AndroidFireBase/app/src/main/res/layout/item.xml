<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#E4E0E0"
    android:layout_margin="8dp">

    <ImageView
        android:id="@+id/imageViewFruta"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:srcCompat="@tools:sample/avatars" />

    <TextView
        android:id="@+id/item_Id"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:textSize="16dp"
        android:text="TextView"
        app:layout_constraintBottom_toTopOf="@+id/item_Nombre"
        app:layout_constraintStart_toEndOf="@+id/imageViewFruta"
        app:layout_constraintTop_toTopOf="@+id/imageViewFruta" />

    <TextView
        android:id="@+id/item_Precio"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textSize="16dp"
        android:layout_marginStart="8dp"
        android:layout_marginBottom="8dp"
        android:text="TextView"
        app:layout_constraintBottom_toBottomOf="@+id/imageViewFruta"
        app:layout_constraintStart_toEndOf="@+id/imageViewFruta" />

    <TextView
        android:id="@+id/item_Nombre"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textSize="23dp"
        android:layout_marginStart="8dp"
        android:layout_marginBottom="8dp"
        android:text="TextView"
        app:layout_constraintBottom_toTopOf="@+id/item_Precio"
        app:layout_constraintStart_toEndOf="@+id/imageViewFruta" />
</androidx.constraintlayout.widget.ConstraintLayout>