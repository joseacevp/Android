<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardViewInventario"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageViewItemInventario"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:srcCompat="@tools:sample/avatars" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginHorizontal="8dp"
                android:layout_marginVertical="16dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textViewNombreItemInv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Nombre Material" />

                <TextView
                    android:id="@+id/textViewCodItemInv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Codigo Material" />

                <TextView
                    android:id="@+id/textViewLocaliItemInv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Localizacion Material" />

                <TextView
                    android:id="@+id/textViewUsoItemInv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Uso Material" />
            </LinearLayout>
        </LinearLayout>

    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>