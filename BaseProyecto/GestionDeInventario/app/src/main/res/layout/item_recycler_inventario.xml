<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardViewInventario"
        android:layout_width="300dp"
        android:layout_height="150dp"
        android:backgroundTint="#E4E2E2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <FrameLayout
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_gravity="center">

                <ImageView
                    android:id="@+id/imageViewItemInventario"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    tools:srcCompat="@tools:sample/avatars" />

                <ProgressBar
                    android:id="@+id/progressBarItemInv"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center"
                    android:visibility="gone" />
            </FrameLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginHorizontal="8dp"
                android:layout_marginVertical="16dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textViewNombreItemInv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Nombre Material" />

                <TextView
                    android:id="@+id/textViewCodItemInv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Codigo Material" />

                <TextView
                    android:id="@+id/textViewLocaliItemInv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Localizacion Material" />

                <TextView
                    android:id="@+id/textViewUsoItemInv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Uso Material" />
            </LinearLayout>
        </LinearLayout>

    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>