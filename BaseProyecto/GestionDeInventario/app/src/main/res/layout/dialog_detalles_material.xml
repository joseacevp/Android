<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardViewDetalle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="23dp"
        android:backgroundTint="#E4E2E2"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imageViewFotoDetalle"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:src="@drawable/ic_home_black_24dp"
                android:layout_gravity="center" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="23dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textViewNombreItemDet"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Nombre Material" />

                <TextView
                    android:id="@+id/textViewCodItemDet"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Codigo Material" />

                <TextView
                    android:id="@+id/textViewLocaliItemDet"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Localizacion Material" />

                <TextView
                    android:id="@+id/textViewUsoItemDet"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Uso Material" />

                <TextView
                    android:id="@+id/textViewCantItemDet"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Cantidad Material" />

                <EditText
                    android:id="@+id/editTextIncreCantDet"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:hint="AÃ±adir Cantidad:"
                    android:inputType="number|numberSigned" />

            </LinearLayout>

        </LinearLayout>

    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>